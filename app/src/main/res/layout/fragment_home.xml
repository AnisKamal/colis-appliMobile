<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/sky_blue_1"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/salutationId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="\t \t \t Salut  ! "
                        android:textColor="@color/white"
                        android:textSize="50dp" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Ici tu trouveras des personnes pour amener
    ton colis partout où tu veux "
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_profil_id"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/utilisateur" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="30dp">

                <EditText
                    android:id="@+id/depart"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Saisir le lieu de depart "
                    android:paddingLeft="30dp" />

                <EditText
                    android:id="@+id/arrive"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Saisir le lieu d'arrivé  "
                    android:paddingLeft="30dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:background="@drawable/layout_bg_arrondi"
            android:orientation="vertical">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:text="Rechercher"
                android:textColor="@color/white"
                android:id="@+id/search_button"/>

            <LinearLayout
                android:id="@+id/listPostLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listPost"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>